@{
    var isAdmin = User.IsInRole("Admin");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRM_VUS.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/ico/logo_sask.jpg" type="image/x-icon" />
    <link rel="stylesheet" href="~/css/fs.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/chosen-js@1.8.7/chosen.min.css" rel="stylesheet">

</head>
<body style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;display: flex;
    min-height: 100vh; /* Минимальная высота всей страницы */
    flex-direction: column; margin:0px">
    <header class="position-fixed w-100 z-3">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3 bg-black">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img width="150" height="50" src="~/img/Log_SASK24.png" alt="Alternate Text" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (isAdmin)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="margin-top: 10px">
                        <ul class="navbar-nav flex-grow-1">
                            <div class="dropdown">
                                <button class="btn btn btn-warning text-light dropdown-toggle" type="button" id="ADDMENU" data-bs-toggle="dropdown" aria-expanded="false">
                                    Добавить
                                </button>
                                <ul class="dropdown-menu" style="background-color: black" aria-labelledby="ADDMENU">
                                    <li><a class="dropdown-item text-light" asp-controller="Home" asp-action="AddGroup">Группу</a></li>
                                    <li><a class="dropdown-item text-light" asp-controller="Home" asp-action="AddClassRoom">Кабинеты</a></li>
                                    <li><a class="dropdown-item text-light" asp-controller="Home" asp-action="AddLessons">Предметы</a></li>
                                    <li><a class="dropdown-item text-light" asp-controller="Home" asp-action="AddPSchedule">Постоянное расписание</a></li>
                                    <li><a class="dropdown-item text-light" asp-controller="Home" asp-action="AddTSchedule">Временное расписание</a></li>
                                </ul>

                            </div>
                            <div style="width: 10px; height: 10px;">
                            </div>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>

                }
                else
                {
                @model CRM_VUS.ViewModels.PScheduleVM

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                        <ul class="navbar-nav flex-grow-1">
                                <form class="d-flex" asp-action="ResultList" asp-controller="home" id="myForm" method="post">
                                <select class="form-select groupSelect text-bg-warning text-light border-black " asp-for="SG.Curse" id="first-select">
                                    @foreach (var number in Model.studentGroupsModels.Select(x => x.Curse).Distinct())

                                        {

                                                <option class="text-bg-dark text-light">@number</option>
                                           
                                        } 
                                    <option disabled selected hidden>Номер группы</option>
                                    </select>
                                    <div id="second-select-container" style="display: none;">
                                    <select class="form-select groupSelect mx-2 text-bg-warning text-light border-black " data-placeholder="Выберите вариант..." asp-for="SG.NameGroup" id="second-select" onchange="this.form.submit();" style="width: 150px" required>
                                            @foreach (var number in Model.studentGroupsModels.Select(x => x.NameGroup).Distinct())
                                            {
                                            <option class="text-bg-dark text-light">@number</option>
                                            }
                                        <option class="text-bg-dark text-light" value="" disabled selected hidden>Группы</option>
                                        </select>
                                    </div>
                            
                                </form>
                            </ul>
                                <div style="width: 10px; height: 10px;">
                                </div>
                            
                        <partial name="_LoginPartial" />
                        </div>
                }
        </nav>
    </header>
    <div class="pt-5" style="flex-grow: 1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted bg-warning" style="height: 50px">
        <div class="container text-light">
            &copy; 2024 - Расписание САСК
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chosen-js@1.8.7/chosen.jquery.min.js"></script>
    <script type="text/javascript">
        function OnComplete() {
            $("#exampleModal").modal("hide");
        }
    </script>
    <script type="text/javascript">
        $(window).on('load', function() {
            $('#Create_group').modal('show');
        });
         $(window).on('load', function() {
            $('#Create_classromm').modal('show');
        });
         $(window).on('load', function() {
            $('#Create_Lessons').modal('show');
        });
        $(".chosen-select").chosen({disable_search_threshold: 10});
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.search-select').select2({ width: '200px' });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

