@{
    var isAdmin = User.IsInRole("Admin");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRM_VUS.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/ico/logo_sask.jpg" type="image/x-icon" />
</head>
<body style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;display: flex;
    min-height: 100vh; /* Минимальная высота всей страницы */
    flex-direction: column; margin:0px">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3 bg-black">
            <div class="container">
                <a  class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img width="150" height="50" src="~/img/Log_SASK24.png" alt="Alternate Text" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if(isAdmin){
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="margin-top: 10px">
                        <ul class="navbar-nav flex-grow-1">
                            <div class="dropdown">
                                <button class="btn btn btn-warning text-light dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    Добавить
                                </button>
                                <ul class="dropdown-menu" style="background-color: black" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item text-light" data-bs-toggle="modal" data-bs-target="#Registration_students" href="#">Группу</a></li>
                                    <li><a class="dropdown-item text-light" data-bs-toggle="modal" data-bs-target="#Registration_teachers" href="#">Кабинеты</a></li>
                                    <li><a class="dropdown-item text-light" data-bs-toggle="modal" data-bs-target="#Registration_students" href="#">Предметы</a></li>
                                    <li><a class="dropdown-item text-light" data-bs-toggle="modal" data-bs-target="#Registration_teachers" href="#">Занятие</a></li>
                                </ul>

                            </div>
                            <div style="width: 10px; height: 10px;">
                            </div>
                           @*  <div class="dropdown">
                                <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    Вход
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" style="color: black" data-bs-toggle="modal" data-bs-target="#Authorization_students" href="#">Студент</a></li>
                                    <li><a class="dropdown-item" style="color: black" data-bs-toggle="modal" data-bs-target="#Authorization_teachers" href="#">Преподаватель</a></li>
                                </ul>

                            </div> *@
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>

                }
                else{
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container" style="flex-grow: 1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted bg-warning" style="height: 50px">
        <div class="container text-light">
            &copy; 2024 - Расписание САСК
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
